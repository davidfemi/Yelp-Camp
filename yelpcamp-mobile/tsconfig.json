{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "skipLibCheck": true,
    "noImplicitAny": false
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "*.ts",
    "*.tsx"
  ],
  "exclude": [
    "node_modules/**/*",
    "**/node_modules/**/*",
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/build/**/*",
    "**/.expo/**/*"
  ]
}
